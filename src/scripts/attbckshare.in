##########################################################################

####################
## Init variables ##
####################
script_exit_code=0
outputprefix="attbckshare: "
osname=$(uname -s)			# Get system name for OS differentiation
version="1.1.4"				# set version variable
etclocation=@sysconfdir@/backups	# Path to etc directory
packageversion=@pkgversion@		# Version of the complete package

# See getopt comments at the start of "Main"
case $osname in
*BSD)	binlocation=@bindir@"/"
	;;
# Linux)	Allow fall through for now as the defaults are linux.
*)	binlocation=""
	;;
esac

verbosity=""

###############
## Functions ##
###############

# Output $1 to stdout or stderr depending on $2
output()
{
	if [ $2 = 0 ]
	then
		if [ "$verbosity" = "-v" ]
		then
			echo "$outputprefix$1"
		fi
	else
		echo "$outputprefix$1" 1>&2
	fi
}

# Standard function to test command error ($1 is $?) and exit if non-zero
std_cmd_err_handler()
{
	if [ $1 != 0 ]
	then
		script_exit_code=$1
		script_exit
	fi
}

# Standard function to tidy up and return exit code
script_exit()
{
	exit $script_exit_code
}

# Standard trap exit function
trap_exit()
{
script_exit_code=67
output "Script terminating due to trap received. Code: "$script_exit_code 1
script_exit
}

# Setup trap
trap trap_exit SIGHUP SIGINT SIGTERM

##########
## Main ##
##########
# Process command line arguments with GNU getopt.
# (BSD includes, out of the box, a dodgy, feature lacking getopt program
# installed in /usr/bin. A GNU compatable getopt package is available to install
# and this gets installed in the bindir, ie /usr/local/bin. This means that the
# dodgy getopt version is always found first on the PATH. In order to invoke the
# correct program, $binlocation, (from Makefile bindir), is inserted in the command
# line below to specify the full path). (Linux GNU getopt can be found on PATH so
# binlocation ="").

GETOPTTEMP=`"$binlocation"getopt -o hvV --long help,verbose,version -n "$0" -- "$@"`
std_cmd_err_handler $?

eval set -- "$GETOPTTEMP"
std_cmd_err_handler $?

while true
do
	case "$1" in
	-h|--help)	echo "Usage is $0 [options]"
		echo "	-h or --help displays usage information"
		echo "	OR"
		echo "	-v or --verbose verbose output"
		echo "	OR"
		echo "	-V or --version displays version information"
		shift
		script_exit_code=0
		script_exit
		;;
	-v|--verbose)	verbosity="-v"
		shift
		;;
	-V|--version)	echo "$0 Script version "$version
		echo "$0 Package version "$packageversion
		shift
		script_exit_code=0
		script_exit
		;;
	--)	shift
		break
		;;
	*)	script_exit_code=1
		output "Internal error." 1
		script_exit
		;;
	esac
done

# Script does not accept other arguments.
if [ $# -gt 0 ]
then
	script_exit_code=64
	output "Invalid argument." 1
	script_exit
fi

# Read parameters from $etclocation/backups.conf
IFS="="

exec 3<$etclocation/backups.conf
while read -u3 -ra input
do
	case ${input[0]} in
	server)
		bckupsys=${input[1]}
		;;
	dir)
		bckupdir=${input[1]}
		;;
	user)
		bckupusr=${input[1]}
		;;
	password)
		bckuppwd=${input[1]}
		;;
	esac
done
exec 3<&-

# If BSD we also need the workgroup which can be obtained from
# the ~/.nsmbrc file
case $osname in
*BSD)	exec 3<~/.nsmbrc
	while read -u3 -ra input
	do
		case ${input[0]} in
		workgroup)
			bckupwg=${input[1]}
			;;
		esac
	done
	exec 3<&-
	;;
# Linux)	Allow fall through for now as the defaults are linux.
*)	;;
esac

# Check to see if the NAS backup server is mounted, if not, mount
if [ "$(chkbckshare -bt)" = "FALSE" ]
then
	case $osname in
	*BSD)	mount_smbfs -I $bckupsys -N -U $bckupusr -W $bckupwg \
        		//$bckupusr@$bckupsys/$bckupdir /mnt/$bckupdir
		status=$?
	;;
	# Linux)	Allow fall through for now as the defaults are linux.
	*)	mount -t cifs -o user=$bckupusr,password=$bckuppwd \
	        	//$bckupsys/$bckupdir /mnt/$bckupdir
	        status=$?
	;;
	esac
	if [ $status != 0 ]
	then
		script_exit_code=65
		output "Failed to mount backup NAS server. Mount error: "$status" Script exit code: "$script_exit_code 1
		script_exit
	fi
else
	script_exit_code=66
	output "Backup share already mounted. Script exit code: "$script_exit_code 1
	script_exit
fi

script_exit_code=0
output "Share //$bckupsys/$bckupdir mounted on /mnt/$bckupdir" 0
script_exit
